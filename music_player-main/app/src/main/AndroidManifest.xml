<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.spotify">

    <!-- Izin untuk mengakses penyimpanan eksternal pada Android 10 dan lebih rendah -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Untuk Android 11 dan lebih tinggi, izin untuk mengakses media -->
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <!-- Untuk Android 13 dan lebih tinggi, izin untuk mengakses file audio -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- Izin untuk internet, jika diperlukan -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Jika aplikasi memerlukan akses penuh ke penyimpanan di Android 11, gunakan izin ini -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" android:maxSdkVersion="30" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:targetApi="31">

        <!-- Aktivitas utama untuk login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Aktivitas untuk registrasi -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true">
        </activity>

        <!-- Aktivitas untuk dashboard -->
        <activity
            android:name=".DashboardActivity"
            android:exported="true"
            tools:ignore="MissingClass">
        </activity>

        <activity
            android:name=".PlaylistActivity"
            android:exported="true"
            tools:ignore="MissingClass">
        </activity>
    </application>
</manifest>
